{
    "name": "mba-dsa",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "runArgs": [
        "--rm",
        "--name", "vsc-mba-dsa",
        "--env-file", ".env"
    ],
    "forwardPorts": [8000],
    "mounts": [
        {
            "source": "mba-dsa-dependencies",
            "target": "/tmp/venv",
            "type": "volume"
        },
        {
            "source": "mba-dsa-hf-cache",
            "target": "/tmp/.hf",
            "type": "volume"
        },
        {
            "source": "devcontainer-extensions",
            "target": "/root/.vscode-server/extensions",
            "type": "volume"
        }
    ],
    "updateContentCommand": "[ -f './pyproject.toml' ] && uv sync --all-groups --all-extras || echo 'pyproject.toml not detected'",
    "customizations": {
        "vscode": {
            "settings": {
                "remote.autoForwardPorts": true,
                "python.defaultInterpreterPath": "/tmp/venv",
                "python.analysis.diagnosticSeverityOverrides": {
                    "reportAttributeAccessIssue": "warning",
                    "reportAssignmentType": "warning"
                },
                "[python]": {
                    "diffEditor.ignoreTrimWhitespace": false,
                    "editor.formatOnSave": true,
                    "editor.defaultFormatter": "charliermarsh.ruff"
                },
                "editor.codeActionsOnSave": {
                    "source.organizeImports.ruff": "explicit"
                }
            },
            "extensions": [
                // Development
                "almenon.arepl",
                "charliermarsh.ruff",
                // Environment
                "Cardinal90.multi-cursor-case-preserve",
                "ryu1kn.partial-diff",
                "christian-kohler.path-intellisense",
                "JannisX11.batch-rename-extension",
                "njzy.stats-bar",
                // Utils
                "mhutchie.git-graph",
                "fill-labs.dependi",
                // Style and formatting
                "DavidAnson.vscode-markdownlint",
                "mohsen1.prettify-json",
                "EditorConfig.EditorConfig",
                "ms-python.python",
                "ms-python.isort",
                "tamasfe.even-better-toml",
                // Language
                "streetsidesoftware.code-spell-checker",
                "streetsidesoftware.code-spell-checker-portuguese-brazilian"
            ]
        }
    }
}
